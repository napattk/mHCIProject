<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f56d38"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text='"SeeFood your new best buddy when travelling abroad"'
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:typeface="serif" />

    <ImageView
        android:layout_width="216dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/green_curry_2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginTop="10dp"
        android:text="Ever see a delicious looking food but don't know how to order it?"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:layout_width="346dp"
        android:layout_height="99dp"
        android:layout_marginTop="10dp"
        android:text="Let's SeeFood helps you!"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:typeface="serif" />

</LinearLayout>